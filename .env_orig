CONVERTER_MAGICK_MEMORY_LIMIT=32
CONVERTER_MAGICK_MAP_LIMIT=32

SERVICE_MEM_LIMIT=1536MB
SERVICE_JAVA_OPTS=-Xms512M -Xmx768M -Dvertx.options.blockedThreadCheckInterval=60000 -Dvertx.options.maxWorkerExecuteTime=3600000000000 -Dvertx.options.maxEventLoopExecuteTime=60000000000
SERVICE_JVM_ARGS=-Xms512M -Xmx768M -Dvertx.options.blockedThreadCheckInterval=60000 -Dvertx.options.maxWorkerExecuteTime=3600000000000 -Dvertx.options.maxEventLoopExecuteTime=60000000000
